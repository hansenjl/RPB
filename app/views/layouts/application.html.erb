<!DOCTYPE html>
<html>
  <head>
    <title>Rpb</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if logged_in? %>
    <nav class='navbar'>
      <%= link_to 'Logout', '/logout', method: :delete, class:'button'%>
      <%= link_to 'My Races', races_path , class:'button'%>
      <%= link_to 'Add a Race', new_race_path , class:'button'%>
      <%= link_to 'Add a Workout', new_workout_path , class:'button'%>
      <%= link_to 'All Workouts', workouts_path, class:'button' %>
      <%= link_to 'Add a Training Session', new_training_path, class:'button' %>
      <%= link_to 'My Training Sessions', trainings_path, class:'button' %>
    </nav>
    <% else %>
      <%= link_to 'Log In', login_path %>
    <% end %>
    <div class='container'>
    <%= yield %>
    </div>
  </body>
</html>
